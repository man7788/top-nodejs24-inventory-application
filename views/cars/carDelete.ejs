<h1><%=title %>: <%=content.car.name %></h1>
<h3><%=content.car.manufacturer %> - <%=content.car.body_style %></h3>
<% if (content.carInstances.length > 0) {%>
<p>
  <strong
    >Delete the following car instances before attempting to delete this
    car.</strong
  >
</p>
<h4>Car Instances</h4>
<dl></dl>
<% content.carInstances.forEach((instance)=>{ %>
<hr />
<dt>
  <span
    >id: <a href="/catalog/carinstances/<%=instance.id %>"><%=instance.id %></a>
  </span>
</dt>
<dd>Production Date: <%=instance.production_date %></dd>
<% if (instance.sold_date) { %>
<dd>Sold Date: <%=instance.sold_date %></dd>
<% } %> <% })%> <% } else { %>
<p>Do you really want to delete this car?</p>
<form method="POST" action="">
  <input
    type="hidden"
    name="carid"
    required="true"
    value="<%=content.car.id%>"
  />
  <button type="submit">Submit</button>
</form>
<% } %>
